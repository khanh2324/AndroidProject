<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFEB3B"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_toLeftOf="@id/button"
        android:textColor="#0E40DC"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="anh" />

    <TextView
        android:id="@+id/textView2"
        android:textColor="#152FBC"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:textSize="30dp"

        android:layout_toRightOf="@id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="việt" />

    <Button
        android:textColor="#F70948E8"
        android:backgroundTint="#DAB51919"
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="đổi" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="match_parent"
        android:textColor="#3F51B5"
        android:layout_below="@id/button"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/button2"
        android:layout_below="@id/editTextTextPersonName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:textColor="#F7168F73"
        android:backgroundTint="#A8000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tra cứu" />

    <TextView
        android:id="@+id/textView4"
        android:textColor="#F7DD3C09"
        android:layout_below="@id/button2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:textColor="#F7168F73"
        android:backgroundTint="@color/black"
        android:layout_marginRight="50dp"
        android:layout_below="@id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xóa" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_below="@id/button3"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        tools:srcCompat="@drawable/" />

    <TextView
        android:id="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="#4BB53F"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn văn Doanh" />
</RelativeLayout>